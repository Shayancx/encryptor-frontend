# Backend Development Environment
RACK_ENV=development
DATABASE_URL=sqlite://db/encryptor.db
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-development-jwt-secret-key-change-in-production
BCRYPT_COST=10

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@encryptor.link
EMAIL_ENABLED=false

# File Upload Limits
MAX_FILE_SIZE_ANONYMOUS=104857600  # 100MB
MAX_FILE_SIZE_AUTHENTICATED=4294967296  # 4GB
MAX_FILE_SIZE_ABSOLUTE=5368709120  # 5GB

# Rate Limiting
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_DOWNLOAD=30
RATE_LIMIT_WINDOW=60

# Cleanup
CLEANUP_INTERVAL_HOURS=6
DEFAULT_FILE_TTL_HOURS=24
MAX_FILE_TTL_HOURS=168
