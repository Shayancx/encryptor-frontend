# Backend Production Environment
RACK_ENV=production
DATABASE_URL=sqlite://db/encryptor.db
FRONTEND_URL=https://encryptor.link

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_IN_PRODUCTION
BCRYPT_COST=12

# Email Configuration (Production)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@encryptor.link
EMAIL_ENABLED=true

# File Upload Limits
MAX_FILE_SIZE_ANONYMOUS=104857600  # 100MB
MAX_FILE_SIZE_AUTHENTICATED=4294967296  # 4GB
MAX_FILE_SIZE_ABSOLUTE=5368709120  # 5GB

# Rate Limiting
RATE_LIMIT_UPLOAD=10
RATE_LIMIT_DOWNLOAD=30
RATE_LIMIT_WINDOW=60

# Cleanup
CLEANUP_INTERVAL_HOURS=6
DEFAULT_FILE_TTL_HOURS=24
MAX_FILE_TTL_HOURS=168
